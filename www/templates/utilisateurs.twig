{% extends 'layout.twig' %}

{% block content %}

{% include 'header.twig'%}
{% if alert_data[0] %}
	<div class="alert alert-{{ alert_data[0] }}" role="alert">
		{{ alert_data[1] }}
	</div>
{% endif %}

	<div class="all-screen" id="src_pg">
		<i class="fas fa-chevron-left back_ic search_ic phone"></i>
		<h4>RECHERCHER<label for="cp_selec" class="float-right">ID</label></h4>
		<form id="search_f" method="POST" action="">
			<div class="d-flex form-group">
				<input class="form-control search" type="text" name="in_search" id="search_bar" placeholder="Indiquez le nom de l'utilisateur à rechercher">
				<input class="form-control" type="text" name="Search_id" id="search_ID" placeholder="Indiquez l'ID de l'utilisateur">
			</div>
			<section id="check_zone" class="form-group">
				<div class="custom-control custom-radio">
					<input class="custom-control-input" value="opt4" id="option_4" type="radio" name="opt">
					<label class="custom-control-label" for="option_4"><strong>Personaliser</strong></label>
				</div>
			</section>

			<div class="form-group extra-s">
				<label class="titre_selec" for="promotion_selec">Promotion</label>
				<select class="form-control selec" name="promo_selec" id="promotion_selec">
					<option></option>
					<option>A1</option>
					<option>A2</option>
					<option>A3</option>
					<option>A4</option>
					<option>A5</option>
				</select>
			</div>

			<div class="form-group extra-s">
				<label class="titre_selec" for="search_centre">Centre</label>
				<input class="form-control search" type="text" name="centre_search" id="search_centre" placeholder="Indiquez le nom du centre à rechercher">
			</div>

			<div class="form-group extra-s">
				<label class="titre_selec" for="search_identifiant">Identifiant (mail)</label>
				<input class="form-control search" type="text" name="mail_search" id="search_identifiant" placeholder="Indiquez l'identifiant à rechercher">
			</div>


			<input type="submit" class="btn_e" value="Rechercher">
			<input type="reset" class="float-right btn_e" id="reset_btn" value="Réinitialiser">
		</form>
	</div>

	<section class="sect-div">
		<h5 id="titre_show">Offres</h5>
		<div class="disp_offre">
		
		{% for utilisateur in utilisateurs %}
			{% if utilisateur['Role'] != "Administrateur" and utilisateur['Role'] != "Tuteur" and myid == 2 %}
				<article id="offre_stage" class="nvloffre">
					<h6  id="titre_offre">{{utilisateur['Nom']}} {{utilisateur['Prenom']}}</h6>
					<p>Id : {{utilisateur['Id'] }} </p>
					<p>Identifiant : {{utilisateur['Identifiant'] }} </p>
					<p>promotion : {{utilisateur['Promo'] }} </p>
					<p>Centre : {{utilisateur['Centre'] }}</p>
					<p>Role :  {{utilisateur['Role'] }}</p>
				</article>
			{% elseif myid == 1 %}
				<article id="offre_stage" class="nvloffre">
					<h6  id="titre_offre">{{utilisateur['Nom']}} {{utilisateur['Prenom']}}</h6>
					<p>Id : {{utilisateur['Id'] }} </p>
					<p>Identifiant : {{utilisateur['Identifiant'] }} </p>
					<p>promotion : {{utilisateur['Promo'] }} </p>
					<p>Centre : {{utilisateur['Centre'] }}</p>
					<p>Role :  {{utilisateur['Role'] }}</p>
				</article>
			{% else %}
				<div class="alert alert-warning m-5" role="alert">
					Vous ne possédez pas les droits pour accéder à cette requête.
				</div>
			{% endif %}
		{% endfor %}
			
		</div>
	</section>
	
{% endblock %}